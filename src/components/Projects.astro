---
import AppWindow from "@lucide/astro/icons/app-window"
import Keyboard from "@lucide/astro/icons/keyboard"
// Deprecated but intentionally used for twitt3r project
import Twitter from "@lucide/astro/icons/twitter"
import Zap from "@lucide/astro/icons/zap"

const projects = [
  { Icon: AppWindow, name: "maxpetretta.com", description: "Astro blog", href: "https://github.com/maxpetretta/maxpetretta.com" },
  { Icon: Zap, name: "quickcast.xyz", description: "Farcaster client", href: "https://quickcast.xyz" },
  { Icon: Twitter, name: "twitt3r.xyz", description: "Twitter on Ethereum", href: "https://github.com/maxpetretta/twitt3r.xyz" },
  { Icon: Keyboard, name: "keymap", description: "ZMK combo keymap", href: "https://github.com/maxpetretta/keymap" },
]

const iconClass = "inline size-4 stroke-2 sm:absolute sm:right-3 sm:top-3 sm:size-[1.375rem]"
---

<ul class="grid grid-cols-1 gap-0.5 sm:grid-cols-2 sm:gap-1.5">
  {projects.map(({ Icon, name, description, href }) => (
    <li class="clickable bg-muted first:rounded-t-lg last:rounded-b-lg hover:text-card-foreground hover:brightness-95 dark:hover:brightness-125 sm:rounded-lg">
      <a href={href} target="_blank" rel="noreferrer" class="relative flex items-center justify-between p-2.5 sm:flex-col sm:items-start sm:px-3.5">
        <div class="flex items-center">
          <Icon class={iconClass} />
          <span class="ml-2 font-medium sm:ml-0">{name}</span>
        </div>
        <span class="font-mono text-sm text-muted-foreground sm:text-base">{description}</span>
      </a>
    </li>
  ))}
</ul>
