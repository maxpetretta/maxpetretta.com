---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import "../styles/global.css"

interface Props {
  title?: string
  description?: string
}

const { title = "Max Petretta", description = "Software Engineer" } = Astro.props
const pathname = Astro.url.pathname
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Color theme -->
    <script is:inline>
      const isDark =
        localStorage.theme === "dark" ||
        (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches)
      document.documentElement.classList.toggle("dark", isDark)

      const themeColor = isDark ? "#09090b" : "#ffffff"
      const themeColorMetaTag = document.createElement("meta")
      themeColorMetaTag.name = "theme-color"
      themeColorMetaTag.content = themeColor
      document.head.appendChild(themeColorMetaTag)
    </script>

    <!-- Fonts -->
    <link rel="preload" href="/fonts/InterVariable.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/MonaspaceArgonVarVF.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Metadata -->
    <title>{title}</title>
    <meta name="author" content="Max Petretta" />
    <meta name="description" content={description} />
    <meta name="robots" content="follow, index" />

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png?v=2" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png?v=2" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png?v=2" />
    <link rel="manifest" href="/favicons/site.webmanifest?v=2" />
    <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg?v=2" color="#7b7b7b" />
    <link rel="shortcut icon" href="/favicons/favicon.ico?v=2" />
    <meta name="msapplication-TileColor" content="#000000" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://maxpetretta.com" />

    <!-- Twitter -->
    <meta name="twitter:site" content="@maxpetretta" />
    <meta name="twitter:creator" content="@maxpetretta" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body>
    <div class="mx-auto flex min-h-screen max-w-2xl flex-col px-5 md:px-0">
      <Header pathname={pathname} />

      <main class="grow">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
