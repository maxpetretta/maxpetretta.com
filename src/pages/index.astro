---
import Layout from "@/layouts/Layout.astro"
import Projects from "@/components/Projects.astro"
import Experiences from "@/components/Experiences.astro"
import BlogPost from "@/components/BlogPost.astro"
import { formatDate, getSortedPosts } from "@/lib/utils"

const recentPosts = (await getSortedPosts()).slice(0, 5)
---

<Layout>
  <section class="mt-6 text-muted-foreground">
    <h2>Software Engineer</h2>
    <h3>Detroit, MI</h3>
  </section>

  <section class="mt-20 sm:mt-24">
    <h3 class="mb-4 font-medium">Now</h3>
    <p class="text-stone-700 dark:text-stone-300">
      Currently working on making prediction markets social with <a
        href="https://bracky.app/home"
        class="underline underline-offset-4">Bracky</a
      >.
    </p>
  </section>

  <section class="mt-20 sm:mt-24">
    <h3 class="mb-5 font-medium">Blog</h3>
    <ul class="space-y-2 text-sm sm:text-base">
      {recentPosts.map((post) => (
        <BlogPost href={`/${post.id}`} title={post.data.title} description={post.data.description} date={formatDate(post.data.date, true)} />
      ))}
    </ul>
    <div class="mt-4 flex justify-end">
      <a href="/blog" class="text-sm underline underline-offset-4 text-muted-foreground hover:text-brand">All posts â†’</a>
    </div>
  </section>

  <section class="mt-10 sm:mt-14">
    <h3 class="mb-4 font-medium">Projects</h3>
    <Projects />
  </section>

  <section class="mt-20 sm:mt-24">
    <h3 class="mb-4 font-medium">Experience</h3>
    <Experiences />
  </section>
</Layout>
